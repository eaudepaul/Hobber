<div id="message-<%= message.id %>" class="<%= message.user == current_user ? 'current-user-message' : 'other-user-message' %>">
  <small>
    <strong><%= message.user.username %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
