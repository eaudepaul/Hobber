<div class="sign-in-wrapper">
  <h1>Log in</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs sign-in-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "log-in-input" },
                  placeholder: "E-mail" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "log-in-input" },
                  placeholder: "Password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions log-in-button">
      <%= f.button :submit, "Log in", class: "log-in-button" %>
    </div>
  <% end %>

  <div class="log-in-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
