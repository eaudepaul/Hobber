<div class="backgroundlogo" style ="background: url('<%= image_url "BG-Login.png" %>');background-size: cover;">
  <div class="sign-in-wrapper">
    <h1>Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs sign-in-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "log-in-input" },
                  placeholder: "E-mail" %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "log-in-input" },
                  placeholder: "Password" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "quest-button" %>
      </div>
    </div>
    <% end %>

    <div class="log-in-links">
     <%= render "devise/shared/links" %>
    </div>
  <div>
</div>
